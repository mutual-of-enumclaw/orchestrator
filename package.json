{
    "name": "@moe-tech/orchestrator",
    "author": "Mutual of Enumclaw",
    "publisher": "Mutual of Enumclaw",
    "license": "LGPLv3",
    "version": "1.0.97",
    "description": "The core data and related processing for orchestrators",
    "main": "dist/index.js",
    "scripts": {
        "prebuild": "npm run lt",
        "build": "npm run buildLibrary && npm run buildActivity && npm run buildMetrics && npm run buildCore",
        "test": "npx jest",
        "test:coverage": "npm run test -- --coverage",
        "test:watch": "node_modules/.bin/jest --watch",
        "lint": "npx eslint **/*.ts --ignore-pattern **/*.d.ts",
        "lint:fix": "npm run lint --fix",
        "lt": "npm run lint && npm run test:coverage",
        "refreshVSToken": "vsts-npm-auth -config .npmrc",
        "package": "npx sls package",
        "activities": "npx orch-utils activities",
        "clean": "npx orch-utils clean",
        "buildLibrary": "cd library && npm i && npm run build && cd ..",
        "buildActivity": "cd activity && npm i && npm run build && cd ..",
        "buildMetrics": "cd metrics && npm i && npm run build && cd ..",
        "buildCore": "npm i && npx tsc -d",
        "deploy": "sam deploy",
        "buildPublish": "npm run build && npm publish",
        "deployNk": "npm run deploy -- --stack-name nk-orch --s3-bucket moe-deployment-snd --s3-prefix sam/nk-orch --capabilities CAPABILITY_NAMED_IAM CAPABILITY_AUTO_EXPAND --parameter-overrides StackTagName=nk-orch EnvironmentTagName=snd"
    },
    "dependencies": {
        "@moe-tech/dynamo-delta": "^1.0.25",
        "@moe-tech/orch-utils": "file:orch-utils",
        "@types/aws-sdk": "^2.7.0",
        "@types/rewire": "^2.5.28",
        "epsagon": "^1.58.6"
    },
    "devDependencies": {
        "@types/aws-lambda": "8.10.11",
        "@types/jest": "^23.3.9",
        "@types/node": "^10.17.19",
        "@typescript-eslint/eslint-plugin": "^4.8.2",
        "@typescript-eslint/parser": "^4.8.2",
        "aws-lambda": "^1.0.5",
        "aws-sdk": "^2.656.0",
        "aws-sdk-mock": "^4.5.0",
        "eslint": "^7.14.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-config-standard-with-typescript": "^19.0.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.1.0",
        "hard-source-webpack-plugin": "^0.13.1",
        "jest": "^25.5.4",
        "jest-junit": "^7.0.0",
        "serverless": "^1.75.0",
        "serverless-iam-roles-per-function": "^1.0.4",
        "serverless-plugin-generic-stack": "^1.0.2",
        "serverless-plugin-include-dependencies": "^3.2.1",
        "serverless-plugin-tracing": "^2.0.0",
        "serverless-pseudo-parameters": "^2.5.0",
        "serverless-webpack": "^5.3.1",
        "source-map-support": "^0.5.13",
        "ts-jest": "^25.3.1",
        "ts-loader": "^6.2.2",
        "tslint": "^5.18.0",
        "typescript": "^3.8.3",
        "webpack": "^4.42.1",
        "webpack-node-externals": "^1.7.2"
    },
    "files": [
        "/dist",
        "/activity-workflow.json"
    ]
}
