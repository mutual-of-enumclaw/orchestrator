{
    "name": "@moe-tech/orchestrator-core",
    "author": "Mutual of Enumclaw",
    "publisher": "Mutual of Enumclaw",
    "license": "LGPLv3",
    "version": "2.0.25",
    "description": "The core data and related processing for orchestrators",
    "engines": {
        "node": ">=12.0.0"
    },
    "engineStrict": true,
    "scripts": {
        "clean": "npx rimraf .build",
        "build": "npx samtsc --build-only",
        "buildLibrary": "npm run build --prefix library/src",
        "pretest": "tsc -d -p library/src",
        "test": "node --max_old_space_size=4096 ./node_modules/jest/bin/jest.js --silent --runInBand --logHeapUsage",
        "test:coverage": "npm run test -- --coverage",
        "test:watch": "node_modules/.bin/jest --watch",
        "lint": "npx eslint **/*.ts --ignore-pattern **/*.d.ts",
        "lint:fix": "npm run lint --fix",
        "refreshVSToken": "vsts-npm-auth -config .npmrc",
        "activities": "node orch-utils/index.js",
        "deploy": "npx samtsc --deploy-only",
        "buildPublish": "npm run buildLibrary && npm publish"
    },
    "dependencies": {
        "@moe-tech/orchestrator": "file:library/src",
        "cfn-response-promise": "^1.1.0",
        "source-map-support": "^0.5.21"
    },
    "devDependencies": {
        "@moe-tech/orch-utils": "file:orch-utils",
        "@types/aws-lambda": "^8.10.64",
        "@types/jest": "^23.3.9",
        "@types/node": "^14.17.10",
        "@typescript-eslint/eslint-plugin": "^4.8.2",
        "@typescript-eslint/parser": "^4.8.2",
        "eslint": "^7.14.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-config-standard-with-typescript": "^19.0.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.1.0",
        "hard-source-webpack-plugin": "^0.13.1",
        "jest": "^26.6.3",
        "jest-junit": "^7.0.0",
        "rimraf": "^3.0.2",
        "samtsc": "^1.0.64",
        "serverless-webpack": "^5.3.5",
        "ts-jest": "^26.4.4",
        "ts-loader": "^6.2.2",
        "typescript": "^4.1.3",
        "webpack": "^5.10.0",
        "webpack-cli": "^4.2.0",
        "webpack-node-externals": "^2.5.2"
    },
    "files": [
        "/dist",
        "/activity-workflow.json"
    ]
}
