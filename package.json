{
    "name": "orchestrator",
    "author": "Mutual of Enumclaw",
    "publisher": "Mutual of Enumclaw",
    "license": "LGPLv3",
    "version": "1.0.97",
    "description": "The core data and related processing for orchestrators",
    "main": "dist/index.js",
    "scripts": {
        "prebuild": "npm run installLibrary && npm run installHS && npm run installActivity && npm run installMetrics",
        "build": "tsc -d",
        "test": "npx jest",
        "installUtils": "cd orch-utils && npm i",
        "installHS": "cd src && npm i",
        "installActivity": "cd activity && npm run prebuild",
        "installLibrary": "cd library && npm i && tsc -d",
        "installMetrics": "cd metrics && npm run prebuild",
        "test:coverage": "npm run test -- --coverage",
        "test:watch": "node_modules/.bin/jest --watch",
        "lint": "npx eslint **/*.ts --ignore-pattern **/*.d.ts",
        "lint:fix": "npm run lint --fix",
        "refreshVSToken": "vsts-npm-auth -config .npmrc",
        "activities": "npx orch-utils activities",
        "deploy": "sam deploy --capabilities CAPABILITY_NAMED_IAM CAPABILITY_AUTO_EXPAND",
        "buildPublish": "npm run build && npm publish",
        "deployNk": "npm run deploy -- --stack-name nk-orch --s3-bucket moe-deployment-snd --s3-prefix sam/nk-orch --parameter-overrides StackTagName=nk-orch EnvironmentTagName=snd"
    },
    "dependencies": {
        "aws-sam-webpack-plugin": "^0.7.0"
    },
    "devDependencies": {
        "@moe-tech/orch-utils": "file:orch-utils",
        "@moe-tech/orchestrator": "file:./library",
        "@types/aws-lambda": "^8.10.64",
        "@types/jest": "^23.3.9",
        "@types/node": "^10.17.19",
        "@typescript-eslint/eslint-plugin": "^4.8.2",
        "@typescript-eslint/parser": "^4.8.2",
        "eslint": "^7.14.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-config-standard-with-typescript": "^19.0.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.1.0",
        "hard-source-webpack-plugin": "^0.13.1",
        "jest": "^25.5.4",
        "jest-junit": "^7.0.0",
        "serverless-webpack": "^5.3.5",
        "source-map-support": "^0.5.13",
        "ts-jest": "^25.3.1",
        "ts-loader": "^6.2.2",
        "typescript": "^4.1.3",
        "webpack": "^5.10.0",
        "webpack-cli": "^4.2.0",
        "webpack-node-externals": "^2.5.2"
    },
    "files": [
        "/dist",
        "/activity-workflow.json"
    ]
}
