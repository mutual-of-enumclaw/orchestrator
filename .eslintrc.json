{
    "plugins": [
        "@typescript-eslint",
        "jest"
    ],
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": 0,
        "no-useless-constructor": 0,
        "array-callback-return": 0,
        "indent": ["error", 4],
        "semi": "off",
        "no-use-before-define": "off"
    }
}
